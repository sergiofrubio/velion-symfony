{{ form_start(registrationForm) }}

<div class="row mb-3">
	<div class="col">
		{{ form_label(registrationForm.name) }}
		{{ form_widget(registrationForm.name)}}
		{{ form_errors(registrationForm.name) }}
	</div>
	<div class="col">
		{{ form_label(registrationForm.surname) }}
		{{ form_widget(registrationForm.surname) }}
		{{ form_errors(registrationForm.surname) }}
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		{{ form_label(registrationForm.id) }}
		{{ form_widget(registrationForm.id) }}
		{{ form_errors(registrationForm.id) }}
	</div>
	<div class="col">
		{{ form_label(registrationForm.genre) }}
		{{ form_widget(registrationForm.genre, {'attr': {'class': 'form-select'}}) }}
		{{ form_errors(registrationForm.genre) }}
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		{{ form_label(registrationForm.birth_date) }}
		{{ form_widget(registrationForm.birth_date) }}
		{{ form_errors(registrationForm.birth_date) }}
	</div>
	<div class="col">
		{{ form_label(registrationForm.roles) }}
		<div class="form-control">
			{% for child in registrationForm.roles %}
				<div class="form-check form-check-inline">
					{{ form_widget(child) }}
					{{ form_label(child, null, {'class': 'form-check-label', 'for': child.vars.id}) }}
				</div>
			{% endfor %}
			{{ form_errors(registrationForm.roles) }}
		</div>
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		{{ form_label(registrationForm.phone) }}
